{
  "name": "sufyandev/laravel-migration-linter",
  "description": "A lightweight Laravel package that analyzes and warns about risky database migration changes before they reach production.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Muhammad Sufyan",
      "email": "muhammadsufyanwebdeveloper@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1|^8.2|^8.3",
    "spatie/laravel-package-tools": "^1.16"
  },
  "require-dev": {
    "laravel/framework": "^10.0|^11.0",
    "orchestra/testbench": "^8.0|^9.0",
    "pestphp/pest": "^3.0",
    "laravel/pint": "^1.0",
    "nunomaduro/larastan": "^2.9"
  },
  "autoload": {
    "psr-4": {
      "Sufyan\\MigrationLinter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sufyan\\MigrationLinter\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Sufyan\\MigrationLinter\\MigrationLinterServiceProvider"
      ]
    }
  },
  "conflict": {
    "laravel/framework": "<10.0"
  },
  "homepage": "https://muhammad-sufyan5.github.io/sufyan-laravel-migration-lint-package/",
  "keywords": [
    "laravel",
    "migrations",
    "linter",
    "ci",
    "database",
    "schema"
  ],
  "support": {
    "issues": "https://github.com/muhammad-sufyan5/sufyan-laravel-migration-lint-package/issues",
    "source": "https://github.com/muhammad-sufyan5/sufyan-laravel-migration-lint-package"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
